{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pixlet",
  "version": "0.1.0",
  "identifier": "com.radua.pixlet",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Pixlet - Pixel Art Editor",
        "width": 1000,
        "height": 700,
        "minWidth": 700,
        "minHeight": 550,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
